{
    "name": "vscode-dashboard",
    "displayName": "Dashboard",
    "description": "Organize your workspaces in a speed-dial manner.",
    "version": "1.3.0",
    "publisher": "kruemelkatze",
    "icon": "media/extension_icon.png",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/dashboard",
    "repository": {
        "type": "git",
        "url": "https://github.com/Kruemelkatze/vscode-dashboard.git"
    },
    "contributes": {
        "commands": [
            {
                "command": "dashboard.open",
                "title": "Dashboard: Open"
            },
            {
                "command": "dashboard.addProject",
                "title": "Dashboard: Add Project"
            },
            {
                "command": "dashboard.removeProject",
                "title": "Dashboard: Remove Project"
            },
            {
                "command": "dashboard.editProjects",
                "title": "Dashboard: Edit Projects"
            }
        ],
        "keybindings": [
            {
                "command": "dashboard.open",
                "key": "ctrl+f1",
                "mac": "cmd+f1"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Dashboard: UI Customizations",
            "properties": {
                "dashboard.displayProjectPath": {
                    "type": "boolean",
                    "default": true
                },
                "dashboard.customProjectCardBackground": {
                    "type": "string",
                    "default": null
                },
                "dashboard.customProjectNameColor": {
                    "type": "string",
                    "default": null
                },
                "dashboard.customProjectPathColor": {
                    "type": "string",
                    "default": null
                },
                "dashboard.customProjectsTempFileLocation": {
                    "type": "string",
                    "default": null,
                    "description": "Absolute path of temporary file for editing the dashboard manually."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.10",
        "dragula": "^3.7.2",
        "fitty": "^2.2.6",
        "gulp": "^4.0.2",
        "gulp-clean-css": "^4.2.0",
        "gulp-sass": "^4.0.2",
        "node-sass": "^4.12.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.2",
        "vscode": "^1.1.34"
    },
    "dependencies": {
        "mkdirp": "^0.5.1"
    }
}
